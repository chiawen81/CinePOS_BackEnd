    "components": {
        "schemas": {
            "LoginReq": {
                "required": [
                    "password",
                    "staffId"
                ],
                "properties": {
                    "staffId": {
                        "type": "string",
                        "description": "員工編號",
                        "example": "A0002"
                    },
                    "password": {
                        "type": "string",
                        "description": "密碼",
                        "example": "asd123"
                    }
                }
            },
            "LoginRes": {
                "properties": {
                    "code": {
                        "type": "number",
                        "example": 1
                    },
                    "message": {
                        "type": "string",
                        "example": "message"
                    },
                    "data": {
                        "$ref": "#/components/schemas/LoginRes_data"
                    }
                }
            },
            "CommonResFailedWrongPassword": {
                "properties": {
                    "code": {
                        "type": "number",
                        "example": -1
                    },
                    "message": {
                        "type": "string",
                        "example": "密碼錯誤!"
                    }
                }
            },
            "CommonResFailedNoFound": {
                "properties": {
                    "code": {
                        "type": "number",
                        "example": -1
                    },
                    "message": {
                        "type": "string",
                        "example": "查無此人!"
                    }
                }
            },
            "CommonResFailedFieldInvalid": {
                "properties": {
                    "code": {
                        "type": "number",
                        "example": -1
                    },
                    "message": {
                        "type": "string",
                        "example": "欄位驗證錯誤!"
                    }
                }
            },
            "CommonResFailedAuthInvalid": {
                "properties": {
                    "code": {
                        "type": "number",
                        "example": -1
                    },
                    "message": {
                        "type": "string",
                        "example": "請重新登入!"
                    }
                }
            },
            "InfoUpdateReq": {
                "required": [
                    "newName",
                    "staffId"
                ],
                "properties": {
                    "newName": {
                        "type": "string",
                        "description": "名字",
                        "example": "黃小狗"
                    },
                    "staffId": {
                        "type": "string",
                        "description": "員工編號",
                        "example": "A0002"
                    }
                }
            },
            "InfoUpdateRes": {
                "properties": {
                    "code": {
                        "type": "number",
                        "example": 1
                    },
                    "message": {
                        "type": "string",
                        "example": "message"
                    },
                    "data": {
                        "$ref": "#/components/schemas/InfoUpdateRes_data"
                    }
                }
            },
            "LoginRes_data": {
                "type": "object",
                "properties": {
                    "staffId": {
                        "type": "string",
                        "example": "A0001"
                    },
                    "name": {
                        "type": "string",
                        "example": "文文"
                    },
                    "token": {
                        "type": "string",
                        "example": "123234345"
                    }
                }
            },
            "InfoUpdateRes_data": {
                "type": "object",
                "properties": {
                    "staffId": {
                        "type": "string",
                        "example": "A0001"
                    },
                    "newName": {
                        "type": "string",
                        "example": "文文2"
                    }
                }
            },
            "UserProfileRes": {
                "properties": {
                    "code": {
                        "type": "number",
                        "example": 1
