            }
        },
        "/v1/manager/user/profile": {
            "post": {
                "tags": [
                    "Manager"
                ],
                "summary": "修改員工姓名",
                "requestBody": {
                    "description": "資料格式",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InfoUpdateReq"
                            }
