{
    "openapi": "3.0.0",
    "info": {
        "title": "CinePOS_BackEnd",
        "description": "CinePOS 後端API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/"
        }
    ],
    "tags": [
        {
            "name": "Staff"
        },
        {
            "name": "Manager"
        },
        {
            "name": "Common"
        }
    ],
    "paths": {
        "/v1/staff/login": {
            "post": {
                "tags": [
                    "Staff"
                ],
                "summary": "登入請求",
                "requestBody": {
                    "description": "資料格式",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginReq"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginRes"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CommonResFailedWrongPassword"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/staff/user/profile": {
            "post": {
                "tags": [
                    "Staff"
                ],
                "summary": "修改員工姓名",
                "requestBody": {
                    "description": "資料格式",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InfoUpdateReq"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/InfoUpdateRes"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CommonResFailedFieldInvalid"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/staff/user/profile/:satffId": {
            "get": {
                "tags": [
                    "Staff"
                ],
                "summary": "取得櫃台人員資料",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserProfileRes"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CommonResFailedNoFound"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/staff/user/profile/:staffId": {
            "post": {
                "tags": [
                    "Staff"
                ],
                "summary": "上傳櫃台人員大頭貼",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/profile_staffId_body"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserPostStickerRes"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "上傳失敗",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserPostStickerReFailed"
                                }
                            }
                        }
                    }
                }
            }
        },
